package Student.com.jdbc.student;


	import java.sql.*;
	import java.util.List;

	public class StudentImpl implements Istudent {

	    IConnection conObj = new ConnectionImpl();

	    @Override
	    public void insertStudent(Student s) {
	        try(Connection con = conObj.getConnection()){
	            PreparedStatement ps = con.prepareStatement("INSERT INTO student VALUES (?,?,?)");
	            ps.setInt(1, s.getId());
	            ps.setString(2, s.getName());
	            ps.setInt(3, s.getAge());
	            ps.executeUpdate();
	        } catch(Exception e) { System.out.println(e); }
	    }

	    @Override
	    public void insertMultiple(List<Student> list) {
	        for(Student s : list)
	            insertStudent(s);
	    }

	    @Override
	    public void updateStudent(Student s) {
	        try(Connection con = conObj.getConnection()){
	            PreparedStatement ps = con.prepareStatement("UPDATE student SET name=?, age=? WHERE id=?");
	            ps.setString(1, s.getName());
	            ps.setInt(2, s.getAge());
	            ps.setInt(3, s.getId());
	            ps.executeUpdate();
	        } catch(Exception e) { System.out.println(e); }
	    }

	    @Override
	    public void updateMultiple(List<Student> list) {
	        for(Student s : list)
	            updateStudent(s);
	    }

	    @Override
	    public void deleteStudent(int id) {
	        try(Connection con = conObj.getConnection()){
	            PreparedStatement ps = con.prepareStatement("DELETE FROM student WHERE id=?");
	            ps.setInt(1, id);
	            ps.executeUpdate();
	        } catch(Exception e) { System.out.println(e); }
	    }

	    @Override
	    public void deleteMultiple(List<Integer> ids) {
	        for(int id : ids)
	            deleteStudent(id);
	    }

	    @Override
	    public void showStudents() {
	        try(Connection con = conObj.getConnection()){
	            Statement st = con.createStatement();
	            ResultSet rs = st.executeQuery("SELECT * FROM student");
	            while(rs.next()){
	                System.out.println(rs.getInt(1)+" "+rs.getString(2)+" "+rs.getInt(3));
	            }
	        } catch(Exception e) { System.out.println(e); }
	    }
	}


