package Student.com.jdbc.student;


	import java.util.Scanner;

	public class Menu implements IMenu {

	    Istudent obj = new StudentImpl();
	    Scanner sc = new Scanner(System.in);

	    @Override
	    public void menu() {
	        while(true){
	            System.out.println("\nStudent Database Menu");
	            System.out.println("1. Insert a Student");
	            System.out.println("2. Show Students");
	            System.out.println("3. Exit");

	            System.out.print("Enter choice: ");
	            int ch = sc.nextInt();

	            switch(ch){
	                case 1:
	                    System.out.print("Enter id name age: ");
	                    obj.insertStudent(new Student(sc.nextInt(), sc.next(), sc.nextInt()));
	                    break;

	                case 2:
	                    obj.showStudents();
	                    break;

	                case 3:
	                    System.out.println("Exiting...");
	                    return;

	                default:
	                    System.out.println("Invalid Choice!");
	            }
	        }
	    }
	}


