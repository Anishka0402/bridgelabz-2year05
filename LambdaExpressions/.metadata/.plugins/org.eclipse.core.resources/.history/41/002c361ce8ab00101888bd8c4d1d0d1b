package com.college.lambda;

public interface LightBehavior {
	void activate();
	}

	public class SmartHomeLighting {
	    public static void main(String[] args) {

	        // Define light behaviors using lambda expressions
	        LightBehavior motionTrigger = () -> 
	            System.out.println("Motion detected! Turning lights ON with soft warm glow.");

	        LightBehavior timeOfDayTrigger = () -> 
	            System.out.println("It's sunset! Activating evening light mode with dim orange hue.");

	        LightBehavior voiceCommandTrigger = () -> 
	            System.out.println("Voice command received: 'Party mode' â€” activating colorful light pattern!");

	        // Simulating trigger activations
	        System.out.println("---- Smart Home Lighting Automation ----");
	        simulateTrigger("Motion Sensor", motionTrigger);
	        simulateTrigger("Time of Day", timeOfDayTrigger);
	        simulateTrigger("Voice Command", voiceCommandTrigger);
	    }

	    // Method to simulate different triggers
	    private static void simulateTrigger(String triggerName, LightBehavior behavior) {
	        System.out.println("\nTrigger: " + triggerName);
	        behavior.activate();
	    }
	}

}
